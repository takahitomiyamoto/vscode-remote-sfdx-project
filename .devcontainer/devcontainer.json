{
  "name": "Salesforce Project",
  "dockerFile": "Dockerfile",
  "extensions": [
    "chuckjonas.apex-pmd",
    "coenraads.bracket-pair-colorizer",
    "dbaeumer.vscode-eslint",
    "donjayamanne.githistory",
    "eamodio.gitlens",
    "eriklynd.json-tools",
    "esbenp.prettier-vscode",
    "github.vscode-pull-request-github",
    "gruntfuggly.todo-tree",
    "hdg.live-html-previewer",
    "ibm.output-colorizer",
    "ionutvmi.path-autocomplete",
    "mechatroner.rainbow-csv",
    "mosapride.zenkaku",
    "ms-vsliveshare.vsliveshare",
    "redhat.vscode-xml",
    "salesforce.codey-midnight",
    "salesforce.salesforcedx-vscode",
    "shardulm94.trailing-spaces"
  ],
  "settings": {
    "salesforcedx-vscode-apex.java.home": "/usr/lib/jvm/java-11-openjdk-amd64",
    "salesforcedx-vscode-apex.enable-semantic-errors": false,
    "salesforcedx-vscode-apex.enable-sobject-refresh-on-startup": false,
    "salesforcedx-vscode-core.orgBrowser.enabled": true,
    "salesforcedx-vscode-core.retrieve-test-code-coverage": true,
    "salesforcedx-vscode-core.show-cli-success-msg": false,
    "salesforcedx-vscode-core.telemetry.enabled": false,
    "salesforcedx-vscode-lightning.activationMode": "autodetect",
    "salesforcedx-vscode-lightning.showLightningExplorer": true,
    "apexPMD.enableCache": true,
    "apexPMD.commandBufferSize": 64,
    "apexPMD.priorityErrorThreshold": 1,
    "apexPMD.priorityWarnThreshold": 3,
    "apexPMD.rulesets": ["default"],
    "apexPMD.runOnFileOpen": true,
    "apexPMD.runOnFileSave": true,
    "apexPMD.showErrors": true,
    "apexPMD.showStdErr": true,
    "apexPMD.showStdOut": true,
    "editor.fontSize": 14,
    "editor.formatOnSave": true,
    "editor.minimap.enabled": false,
    "editor.mouseWheelZoom": true,
    "editor.renderWhitespace": "all",
    "editor.tabSize": 2,
    "editor.suggestSelection": "first",
    "files.trimTrailingWhitespace": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    "window.zoomLevel": 0,
    "workbench.colorTheme": "Codey Midnight",
    "[json]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    }
  }
}
